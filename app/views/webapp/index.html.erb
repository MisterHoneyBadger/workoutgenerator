<script type="text/javascript">
	function ajax(urlname, table, rowNum) {
		jQuery.ajax({
			type : "GET",
			url : urlname,
			dataType : 'json',
			success : function(data) {
				for (var row = 0; row < rowNum; row++) {
					$(table).children().children()[row].children[0].innerHTML = data[row];
					var picture = "<img src=" + "/assets/" + data[row].replace(/\s+/g, '') + ".gif" + " height='50' width='50'>";
					$(table).children().children()[row].children[1].innerHTML = picture;
				}
			}
		});
	}

